<div style="margin-top:1.4em; background:#f7fafd; border-radius:8px; padding:1em 1.3em;">
  <div style="font-weight:600; color:var(--accent); margin-bottom:0.5em;"><%= t('buttons.comments') %></div>
  <% blog.comments.each do |comment| %>
    <div style="margin-bottom:0.7em; border-bottom:1px solid #e3e6ea; padding-bottom:0.5em; font-size:0.98em;">
      <span style="color:#1976d2; font-weight:500;"><%= comment.user&.email || t('buttons.guest') %>:</span>
      <%= comment.body %>
      <% if user_signed_in? && (comment.user == current_user || current_user.admin?) %>
        <%= button_to blog_comment_path(blog, comment), method: :delete, data: { confirm: t('buttons.confirm_delete_comment') }, class: 'btn btn-outline', style: 'margin-left:1em; padding:0.18em 0.9em; font-size:0.95em;' do %>
          <%= t('buttons.delete') %>
          <% if controller.controller_name == 'blogs' && controller.action_name == 'show' %>
            <%= hidden_field_tag :redirect_to_show, true %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= form_with model: [blog, Comment.new], local: true do |f| %>
      <% if controller.controller_name == 'blogs' && controller.action_name == 'show' %>
        <%= hidden_field_tag :redirect_to_show, true %>
      <% end %>
      <div style="display:flex; gap:0.7em; align-items:center; margin-top:0.7em;">
        <%= f.text_field :body, required: true, maxlength: 1000, placeholder: t('buttons.leave_comment'), style: 'flex:1; padding:0.5em; border-radius:5px; border:1px solid #b3c6e0;' %>
        <%= f.submit t('buttons.add'), class: 'btn', style: 'background:var(--accent); color:#fff; border-radius:6px; padding:0.45em 1.4em; font-size:1em; border:none;' %>
      </div>
    <% end %>
  <% else %>
    <div style="color:#888; font-size:0.96em; margin-top:0.5em;"><%= t('buttons.login_to_comment') %></div>
  <% end %>
</div>
